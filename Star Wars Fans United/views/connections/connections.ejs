<%- include('../partials/header.ejs')%>
        <main>
            <div id="content">
                <% if (connections.length) { %>
                <ul id="categories">
                    <li><h1>Galactic Republic Lore Discussions</h1>
                        <ul>
                            <$ connections.forEach(connection => { %>
                                <% if(connection.topic == "Galactic Republic Lore Discussions") { %>
                                    <li class="connect-link"><a href="/connections/<%=connection.id%>"><%=connection.title%></a></li>
                                <$ }
                            )}; %>
                        </ul>
                    </li>
                    <li><h1>Sith Lore</h1>
                        <ul>
                            <$ connections.forEach(connection => { %>
                                <% if(connection.topic == "Sith Lore") { %>
                                    <li class="connect-link"><a href="/connections/<%=connection.id%>"><%=connection.title%></a></li>
                                <$ }
                            )}; %>
                        </ul>
                    </li>
                </ul>
                <% } else { %>
                    <p>There are no connections currently planned.</p>
                <% }; %>
            </div>
        </main>
