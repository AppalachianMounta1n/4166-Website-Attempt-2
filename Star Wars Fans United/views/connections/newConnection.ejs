<%- include('../partials/header.ejs')%>
        <main>
            <div class="content">
                <h1>Create a New Event</h1>
                <form id="new" action="/connections" method="POST">
                    <label for="type">Event Topic: <select name="topics" id="type" required>
                        <option value="Galactic Republic Lore Discussions">Galactic Republic Lore Discussions</option>
                        <option value="Sith Lore">Sith Lore</option></select>
                    </label><br><br>
                    <label for="title">Event Title: <input type="text" id="title" required></label><br><br>
                    <label for="hostname">Event Host: <input type="text" id="host" required></label><br><br>
                    <label for="details">Event Details: <input type="text" id="details" required minlength="25"></label><br><br>
                    <label for="date">Event Date: <input type="date" id="date" placeholder="MM-DD-YYYY" required pattern="/(0[1-9]|1[012])[- \/.](0[1-9]|[12][0-9]|3[01])[- \/.](19|20)[0-9]{2}/"></label><br><br>
                    <label for="startTime">Event Start Time: <input type="time" id="time" placeholder="HH:MM{AM, am, PM, pm}" required pattern="/^([0-1]?[0-9]|2[0-3]):[0-5][0-9](?:AM|PM|am|pm)$/"></label><br><br>
                    <label for="endTime">Event Start Time: <input type="time" id="time" placeholder="HH:MM{AM, am, PM, pm}" required pattern="/^([0-1]?[0-9]|2[0-3]):[0-5][0-9](?:AM|PM|am|pm)$/"></label><br><br>
                    <label for="imageURL">Image URL: <input type="url" name="image" id="image" required></label>

                    <a href="/connections"><button type="button" id="create">Create Event</button></a>
                </form>
            </div>
        </main>
<%- include('../partials/footer.ejs')%>